<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#b7b7a4"
    android:weightSum="6"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_weight="2"
        android:src="@drawable/mediplus02" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="377dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/tonmi_mp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:paddingLeft="6dp"
            android:paddingTop="2dp"
            android:paddingRight="10dp"
            android:paddingBottom="-70dp"
            android:weightSum="4">

            <Button
                android:id="@+id/medicine_details"
                android:layout_width="153dp"
                android:layout_height="95dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="35dp"
                android:layout_marginBottom="-10dp"
                android:layout_weight="2"
                android:backgroundTint="#00FFFFFF"
                android:backgroundTintMode="multiply"
                android:insetLeft="5dp"
                android:insetTop="6dp"
                android:insetRight="2dp"
                android:insetBottom="4dp"
                android:paddingTop="30dp"
                android:paddingBottom="40dp"
                app:icon="@mipmap/mad1_foreground"
                app:iconSize="90dp"
                app:iconTintMode="multiply" />

            <Button
                android:id="@+id/disease_btn"
                android:layout_width="182dp"
                android:layout_height="95dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="-20dp"
                android:layout_marginRight="-0dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:backgroundTint="#00FFFFFF"
                android:insetLeft="30dp"
                android:insetTop="-25dp"
                android:insetRight="5dp"
                android:insetBottom="4dp"
                android:padding="8dp"
                app:icon="@mipmap/d_foreground"
                app:iconPadding="0dp"
                app:iconSize="0dp"
                app:iconTintMode="multiply" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/searchbtn"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="-30dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="2"
                android:backgroundTint="#00FFFFFF"
                android:backgroundTintMode="multiply"
                android:insetLeft="30dp"
                android:insetTop="10dp"
                android:insetRight="35dp"
                android:insetBottom="25dp"
                app:icon="@mipmap/s_foreground"
                app:iconSize="75dp"
                app:iconTintMode="src_in" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="235dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/reference"
                android:layout_width="182dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="35dp"
                android:layout_weight="2"
                android:backgroundTint="#00FFFFFF"
                android:backgroundTintMode="multiply"
                android:insetLeft="10dp"
                android:insetTop="20dp"
                android:insetRight="30dp"
                android:insetBottom="-10dp"
                android:paddingTop="30dp"
                android:paddingBottom="40dp"
                app:icon="@mipmap/doco_foreground"
                app:iconSize="100dp"
                app:iconTintMode="src_atop" />

            <Button
                android:id="@+id/about_us"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="-10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="2"
                android:backgroundTint="#00FFFFFF"
                android:insetLeft="-10dp"
                android:insetTop="20dp"
                android:insetRight="5dp"
                android:insetBottom="-10dp"
                android:padding="8dp"
                app:icon="@mipmap/abus_foreground"
                app:iconPadding="8dp"
                app:iconSize="120dp"
                app:iconTintMode="src_atop" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>